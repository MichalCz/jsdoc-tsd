{
	"version": "0.0.12",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Current File",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--opts",
				"${workspaceFolder}/test/mocha-single.opts",
				"--timeout",
				"999999",
				"--colors",
				"${file}"
			],
			"env": {
				"TS_NODE_PROJECT": "${workspaceFolder}/test/tsconfig.json",
				"TS_NODE_FILES": "true"
			}
		}
	]
}
