{
	"version": "0.0.12",
	"configurations": [
		{
			"name": "Mocha Tests",
			"type": "node",
			"protocol": "inspector",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": [
				"--compilers",
				"ts:ts-node/register",
				"--no-timeouts",
				"${file}"
			],
			"cwd": "${workspaceRoot}"
		}
	]
}
